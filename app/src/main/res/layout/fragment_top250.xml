<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fykj.yzy.beanmovie.fragment.TOP250Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/fragment_top250_us"
            android:gravity="center"
            android:text="@string/us_hot"
            android:textSize="18sp"
            android:textColor="@color/color_3AA94C"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/fragment_top250_douban"
            android:gravity="center"
            android:text="@string/history_hot"
            android:textSize="18sp"
            android:textColor="@color/color_FFE1FF"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">

        <LinearLayout
            android:id="@+id/fragment_top250_img"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_top250_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
