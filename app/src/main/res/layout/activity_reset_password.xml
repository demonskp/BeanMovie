<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fykj.yzy.beanmovie.ResetPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_FFFFFF">

        <ImageView
            android:id="@+id/nav_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/nav_about_back"/>

        <TextView
            android:id="@+id/nav_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="重置密码"
            android:textColor="@color/color_333333"
            android:textSize="17sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_FFFFFF"/>
    <EditText
        android:layout_gravity="center_vertical"
        android:id="@+id/reset_input_phone"
        android:hint="请输入手机号码"
        android:textSize="14sp"
        android:inputType="number"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_DDDDDD"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null" >
        <EditText
                android:maxLength="4"
                android:textSize="14sp"
                android:id="@+id/et_phoneCodes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入右侧验证码" />
            </LinearLayout>

        <ImageView
            android:background="@color/color_F8F8FF"
            android:id="@+id/iv_showCode"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_DDDDDD"/>
    <EditText
        android:layout_gravity="center_vertical"
        android:id="@+id/input_new_password"
        android:hint="新密码"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_DDDDDD"/>
    <EditText
        android:layout_gravity="center_vertical"
        android:id="@+id/input_second_password"
        android:hint="确认新密码"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_DDDDDD"/>
    <Button
        android:text="确定"
        android:textColor="@color/color_FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_reset_password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
