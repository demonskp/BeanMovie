<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_confirm_bg" >

    <TextView
        android:id="@+id/editdlg_tittle"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消息内容"
        android:gravity="center"
        android:textColor="@color/dialog_ok_canle"
        android:textSize="18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/editdlg_content"
        android:background="#e1e1e1" />

        <EditText
            android:id="@+id/editdlg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_ok_canle"
            android:padding="8dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text=""
            android:minHeight="40dp"
            android:gravity="center|left"
            android:background="@null"/>

    <View
        android:id="@+id/confirmdlg_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmdlg_line"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dialog_ok_canle"
            android:textSize="16sp" />

        <View
            android:id="@+id/confirmdlg_line_vertical"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:text="OK"
            android:textColor="#484B4D"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>