<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    >

    <TextView
        android:id="@+id/textView"
        style="@style/pagetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎来到豆影" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_text"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/login_passworld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:text="登陆"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/login_goRegister"
            android:onClick="OnClickEvent"
            android:textSize="12sp"
            android:text="注册豆影   "
            android:textColor="#00ff00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/login_forgivePassworld"
            android:textSize="12sp"
            android:text="|   忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View

            android:id="@+id/base"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"

            android:visibility="visible"
            />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/weixindenglu"
            android:src="@mipmap/ic_weixin"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/weixindenglu"
            style="@style/down_title"
            android:layout_toLeftOf="@+id/base"
            android:layout_marginRight="30dp"
            android:text="微信登录"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/xinlang"
            android:layout_toRightOf="@+id/base"
            android:src="@mipmap/ic_xinlang"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            style="@style/down_title"
            android:layout_toRightOf="@+id/xinlang"
            android:layout_marginLeft="10dp"
            android:text="新浪登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>
